<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loGameScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/loGameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPlayerSymbol1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_column="0"
            android:src="@drawable/o_symbol" />

        <ImageView
            android:id="@+id/bCommit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_column="2"
            android:src="@drawable/check_symbol" />

        <ImageView
            android:id="@+id/ivPlayerSymbol2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_column="4"
            android:src="@drawable/x_symbol" />

    </LinearLayout>

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vGameboard"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/bBack1"
        android:src="@drawable/back_button"/>

</LinearLayout><!-- From: file:/C:/Users/kevin/AndroidProjects/UltimateT3/app/src/main/res/layout/activity_game.xml -->